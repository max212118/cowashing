<div id="appointement" class="border">
<h1 id="apptitle">Pick your appointement</h1>
  <%= simple_form_for [ machine, appointement ] do |f| %>
    <%= f.input :begining_hour, as: :date, label: 'Choose a date', error: 'please choose a time slot to book your appointement', html5: true %>
    <%= f.input :begining_hour, as: :time, label: 'Choose a hour', error: 'please choose a time slot to book your appointement', html5: true %>
    <% f.input :done %>
    <%= f.button :submit, "Book an appointment", id: "btnform", class: "form-btn"%>
  <% end %>
</div>
