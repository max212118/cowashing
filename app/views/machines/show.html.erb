
    <div class="container-main">
      <div class="flex-container">
        <div class= "card-product">
        <% if @machine.machine_picture %>
          <%= image_tag @machine.machine_picture, id: "mainimg", class: "img-thumbnail"  %>
        <% else %>
          <%= image_tag "img_one.jpg", id: "mainimg", class: "img-thumbnail" %>
        <% end %>
          <div class="card-product-infos">
            <h2> <%= "#{@machine.brand}"%> </h2>
            <p><%= "#{@machine.capacity}L"%></p>
            <p><%= "#{@machine.location}"%></p>
          </div>
        </div>
      </div>
       <div class="flex-container">
        <div class="profile">
          <div class="card-infos">
          </div>
        </div>
      </div>
    </div>


      <div class="container container-show-machine">
          <div>
             <%= render"appointements/new", machine: @machine, appointement: @appointement %>
          </div>
      </div>

<% @reviews.each do |review| %>
<p> <%= review.rating %> </p>
<p> <%= review.comment %> </p>
<% end %>

<#% link_to "Delete the machine", machine_path(@machine), method: :delete %>