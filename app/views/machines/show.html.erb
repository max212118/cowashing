
    <div class="container-main">
      <div class="flex-container">
        <div class= "card-product">
        <% if @machine.machine_picture %>
          <%= image_tag @machine.machine_picture, id: "mainimg", class: "img-thumbnail"  %>
        <% else %>
          <%= image_tag "img_one.jpg", id: "mainimg", class: "img-thumbnail" %>
        <% end %>

        </div>
        
      </div>
       <div class="flex-container">
        <div class="profile">
          <div class="card-infos">
          </div>
        </div>
      </div>

    </div>

      <div class="container">
        <%= render"appointements/new", machine: @machine, appointement: @appointement %>
      </div>

<div id="chara" class="border show-flex">
  <div>
    <h1 class="showtitles">Characteristics</h1>
    <p> • Brand : <%= @machine.brand %> </p>
    <p> • Capacity : <%= @machine.capacity %> </p>
    <p> • Location : <%= @machine.location %> </p>
    <p> • Price : <%= @machine.price %>€ </p>
  </div>

  <div>
    <h1 class="showtitles">Owner</h1>
    <p> • First Name : <%= @machine.user.first_name %></p>
    <p> • Last Name : <%= @machine.user.last_name %></p>
    <p> • Age : <%= @machine.user.age %> years old</p>
    <% if @machine.user.profile_picture %>
      <%= image_tag @machine.user.profile_picture, id: "profilshowpic" %>
    <% else %>
      <%= image_tag image_path("avatar_img.jpg"), id: "profilshowpic" %>
    <% end %>
  </div>
</div>

<%= link_to "Delete your offer", machine_path, method: :delete, class: ".purple-round-btn" %>

<% @reviews.each do |review| %>
<p> <%= review.rating %> </p>

<div id="showcomment">
   <% if @machine.user.profile_picture %>
      <%= image_tag @machine.user.profile_picture, id: "profilshowpic" %>
    <% else %>
      <%= image_tag image_path("avatar_img.jpg"), id: "commentshowpic" %>
    <% end %>
  <div>
    <p id="commentcontent"> <%= @machine.user.first_name %> <%= @machine.user.last_name %></p>
    <p> <%= review.comment %> </p>
  </div>
</div>
<% end %>
