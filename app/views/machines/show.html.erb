
    <div class="container-main">
      <div class="flex-container">
        <div class= "card-product">
        <% if @machine.photo.attached? %>
          <%= cl_image_tag @machine.photo.key, id: "mainimg", class: "img-thumbnail"  %>
        <% else %>
          <%= image_tag "img_one.jpg", id: "mainimg", class: "img-thumbnail" %>
        <% end %>

        </div>

      </div>
       <div class="flex-container">
        <div class="profile">
          <div class="card-infos">
          </div>
        </div>
      </div>

    </div>

      <div class="container">
        <%= render"appointements/new", machine: @machine, appointement: @appointement %>
      </div>

<div id="chara" class="border show-flex">
  <div>
    <h1 class="showtitles">Characteristics</h1>
    <p> • Brand : <%= @machine.brand %> </p>
    <p> • Capacity : <%= @machine.capacity %> </p>
    <p> • Location : <%= @machine.location %> </p>
    <p> • Price : <%= @machine.price %>€ </p>
  </div>

  <div>
    <h1 class="showtitles">Owner</h1>
    <p> • First Name : <%= @machine.user.first_name %></p>
    <p> • Last Name : <%= @machine.user.last_name %></p>
    <p> • Age : <%= @machine.user.age %> years old</p>
    <% if @machine.user.profile_picture.attached? %>
      <%= cl_image_tag @machine.user.profile_picture.key, id: "profilshowpic", class: "avatar" %>
    <% else %>
      <%= image_tag "avatar_img.jpg", id: "profilshowpic" %>
    <% end %>
  </div>
</div>

<% if @machine.user == current_user %>
  <%= link_to "Delete your offer", machine_path, method: :delete, id: "deletebtn", class: "purple-round-btn" %>
<% end %>

<% @reviews.each do |review| %>

<div id="showcomment">
   <% if review.user.profile_picture %>
      <%= cl_image_tag review.user.profile_picture.key, id: "commentshowpic" %>
    <% else %>
      <%= image_tag "avatar_img.jpg", id: "commentshowpic" %>
    <% end %>
  <div>
    <p id="commentcontent"> <%= review.user.first_name %> <%= review.user.last_name %></p>
    <div id= "stars">
     <% review.rating.times do %>
     <i class="fas fa-star"></i>
     <% end %>
     </div>
    <p> <%= review.comment %> </p>
  </div>
</div>
<% end %>
