
<div class= "card-product">
  <% if @machine.machine_picture %>
    <%= image_tag @machine.machine_picture, id: "mainimg", class: "img-thumbnail"  %>
  <% else %>
    <%= image_tag "img_one.jpg", id: "mainimg", class: "img-thumbnail" %>
  <% end %>
  <div class="abs_rel">
    <%= render"appointements/new", machine: @machine, appointement: @appointement %>
  </div>

<div id="chara" class="border show-flex">
  <div>
    <h1>Characteristics</h1>
    <p> •  <%= @machine.brand %> </p>
    <p> •  <%= @machine.capacity %> </p>
    <p> •  <%= @machine.location %> </p>
    <p> •  <%= @machine.price %> </p>
  </div>
  <div>
  <h1>Owner</h1>
  <p><%= @machine.user.email %></p>
  </div>
</div>

<% @reviews.each do |review| %>
<p> <%= review.rating %> </p>
<p> <%= review.comment %> </p>
<% end %>
